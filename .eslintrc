{
	"env": {
		"browser": true,
		"es2021": true,
		"jquery": true
	},
	"extends": ["eslint:recommended"],
	"rules": {
		"no-var": 2,
		"no-trailing-spaces": 2,
		"array-bracket-spacing": 0,
		"no-undefined": 0,
		"consistent-this": 2,
		"no-floating-decimal": 2,
		"no-self-compare": 2,
		"no-nested-ternary": 2,
		"no-unused-vars": [2, {"vars": "all", "args": "none"}],
		"camelcase": 1,
		"consistent-return": 1,
		"max-nested-callbacks": [1, 3],
		"new-cap": 1,
		"no-extra-boolean-cast": 1,
		"no-lonely-if": 2,
		"no-new": 1,
		"no-new-wrappers": 1,
		"no-redeclare": 1,
		"no-unused-expressions": 1,
		"no-useless-escape": 1,
		"no-use-before-define": [1, "nofunc"],
		"no-warning-comments": 1
	},
	"globals": {
		"sap": true,
		"jQuery": true
	}
}
